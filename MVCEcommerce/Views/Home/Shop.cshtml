@using MVCEcommerce.Models;
@using System.Linq;

@model MVCEcommerce.Models.DTO_SHOP

@{ 
    ViewBag.Title = "Shopping";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0"><a href="@Url.Action("Index", "Home")">Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Shop</strong></div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">

        <div class="row mb-5">
            <div class="col-md-9 order-2">

                <div class="row">
                    <div class="col-md-12 mb-5">
                        <div class="float-md-left mb-4"><h2 class="text-black h5">Shop All</h2></div>
                        <div class="d-flex">
                            <div class="dropdown mr-1 ml-md-auto">
                                <button type="button" class="btn btn-secondary btn-sm dropdown-toggle" id="dropdownMenuOffset" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Latest
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuOffset">
                                    @if (Model != null && Model.Categoeris != null)
                                    {
                                        foreach (var item in Model.Categoeris)
                                        {
                                        <a class="dropdown-item" href="@Url.Action("Shop/"+item.ID, "Home")">@item.Name</a>

                                        }
                                    }

                                </div>
                            </div>
                           <!-- <div class="btn-group">
                                <button type="button" class="btn btn-secondary btn-sm dropdown-toggle" id="dropdownMenuReference" data-toggle="dropdown">Reference</button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuReference">
                                    <a class="dropdown-item" href="#">Relevance</a>
                                    <a class="dropdown-item" href="#">Name, A to Z</a>
                                    <a class="dropdown-item" href="#">Name, Z to A</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Price, low to high</a>
                                    <a class="dropdown-item" href="#">Price, high to low</a>
                                </div>
                            </div>-->
                        </div>
                    </div>
                </div>
                <div class="row mb-5">

               
                    @{
                        if (Model != null && Model.Products != null && Model.Products.Count > 0)
                        {
                            foreach (Product items in Model.Products)
                            {
                                if (items.Quantity >= 1)
                                {
                                <div class="col-sm-6 col-lg-4 mb-4" data-aos="fade-up">
                                    <div class="block-4 text-center border">
                                        <figure class="block-4-image">
                                            <a href="@Url.Action("ShopProduct/" + items.ID, "Home")"><img src="/images/@items.Images" alt="Image placeholder" class="img-fluid" width="479" height="340"></a>
                                        </figure>
                                        <div class="block-4-text p-4">
                                            <h3><a href="@Url.Action("ShopProduct/" + items.ID, "Home")">@items.Name</a></h3>
                                            <p class="mb-0">@items.user.UserName</p>
                                            <p class="text-primary font-weight-bold">$@items.Price</p>
                                        </div>
                                    </div>
                                </div>
                                    }

                                }
                            }
                        }


                </div>
                <!--<div class="row" data-aos="fade-up">
                    <div class="col-md-12 text-center">
                        <div class="site-block-27">
                            <ul>
                                <li><a href="#">&lt;</a></li>
                                <li class="active"><span>1</span></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>
                                <li><a href="#">&gt;</a></li>
                            </ul>
                        </div>
                    </div>
                </div>-->
            </div>

            <div class="col-md-3 order-1 mb-5 mb-md-0">
                <div class="border p-4 rounded mb-4">
                    <h3 class="mb-3 h6 text-uppercase text-black d-block">Categories</h3>
                    <ul class="list-unstyled mb-0">
                        @if (Model.Categoeris!=null)
                            {
                            foreach (var item in Model.Categoeris)
                            {
                                <li class="mb-1"><a href="@Url.Action("Shop/"+item.ID, "Home")" class="d-flex"><span>@item.Name</span> <span class="text-black ml-auto">( @item.Products.Where(sp=>sp.CategoryID==item.ID&&sp.Quantity>=1).Select(pss => pss).Count() )</span></a></li>

                            }
                        }
                        
                    </ul>
                </div>

                <!--<div class="border p-4 rounded mb-4">
                    <div class="mb-4">
                        <h3 class="mb-3 h6 text-uppercase text-black d-block">Filter by Price</h3>
                        <div id="slider-range" class="border-primary"></div>
                        <input type="text" name="text" id="amount" class="form-control border-0 pl-0 bg-white" disabled="" />
                    </div>

                </div>-->
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="site-section site-blocks-2">
                    <div class="row justify-content-center text-center mb-5">
                        <div class="col-md-7 site-section-heading pt-4">
                            <h2>Categories</h2>
                        </div>
                    </div>
                    <div class="row">

                        @if (Model.Categoeris != null)
                        {
                            foreach (var item in Model.Categoeris.Take(3))
                            {
                                <div class="col-sm-6 col-md-6 col-lg-4 mb-4 mb-lg-0" data-aos="fade" data-aos-delay="">
                                    <a class="block-2-item" href="@Url.Action("Shop/"+item.ID, "Home")">
                                        <figure class="image">
                                            <img src="/images/@item.Image" alt="" class="img-fluid">
                                        </figure>
                                        <div class="text">
                                            <span class="text-uppercase">Collections</span>
                                            <h3>@item.Name</h3>
                                        </div>
                                    </a>
                                </div>

                            }
                        }
                        
                        
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>